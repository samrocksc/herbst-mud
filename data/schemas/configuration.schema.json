{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/samrocksc/herbst-mud/blob/main/data/schemas/configuration.schema.json",
  "title": "Configuration",
  "description": "Game configuration settings",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the configuration"
    },
    "name": {
      "type": "string",
      "description": "Name of the MUD"
    }
  },
  "required": ["id", "name"]
}